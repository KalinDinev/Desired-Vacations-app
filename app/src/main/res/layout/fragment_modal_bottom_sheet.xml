<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DCEDEBEB"
    tools:context=".modal.ModalBottomSheet">

    <ImageView
        android:id="@+id/editImageModal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#F0777575" />

    <ImageView
        android:id="@+id/socialImageModal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/btn_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editImageModal"
        app:tint="#F0777575"


        />

    <ImageView
        android:id="@+id/homeImageModal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/baseline_home_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialImageModal"
        app:tint="#F0777575" />

    <TextView
        android:id="@+id/editModalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="Edit vacation"
        android:textColor="#514F4F"
        app:layout_constraintStart_toEndOf="@+id/editImageModal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/socialModalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="My Socials"
        android:textColor="#514F4F"
        app:layout_constraintStart_toEndOf="@+id/socialImageModal"
        app:layout_constraintTop_toBottomOf="@+id/editModalText" />

    <TextView
        android:id="@+id/homeModalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Home Page"
        android:textColor="#514F4F"
        app:layout_constraintStart_toEndOf="@+id/homeImageModal"
        app:layout_constraintTop_toBottomOf="@+id/socialModalText" />

</androidx.constraintlayout.widget.ConstraintLayout>